<div data-role="page"
     <%= "data-id=\"#{@doc_def['page_id']}\"" if @doc_def['page_id'] %>
     <%= "class=\"#{@doc_def['page_class']}\"" if @doc_def['page_class'] %>
>
    <div data-role="header" data-position="inline">
        <h1><%= @doc_def["title"] %></h1>

        <% if @doc_def["left_text"] %>
            <a href="<%= @doc_def["left_uri"] %>"
               class="<%= @doc_def["left_class"] || "ui-btn-left" %>"
               data-icon="<%= @doc_def["left_icon"] || "back" %>"
               data-direction="<%= @doc_def["left_direction"] || "reverse" %>"
               <%= "data-rel=\"back\"" if @doc_def["left_is_back"] %>
            >
              <%= @doc_def["left_text"] %>
            </a>
        <% end %>

        <% if @doc_def["right_text"] %>
            <a href="<%= @doc_def["right_uri"] %>"
               class="<%= @doc_def["right_class"] || "ui-btn-right" %>"
               data-icon="<%= @doc_def["right_icon"] || "arrow-r" %>"
               <%= "data-direction=\"#{@doc_def["right_direction"]}\"" if @doc_def["right_direction"] %>
            >
              <%= @doc_def["right_text"] %>
            </a>
        <% end %>
    </div>

    <div <%= "class=\"#{@doc_def['panel_class']}\"" if @doc_def['panel_class'] %>>
    <%@content.each_line do |line|%><%= "  " + line%><%end%></div>
</div>
